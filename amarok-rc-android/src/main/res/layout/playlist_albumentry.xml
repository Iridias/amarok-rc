<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_gravity="left"
        android:layout_width="match_parent"
		android:layout_height="wrap_content" 
        android:orientation="vertical">
	<FrameLayout
        android:id="@+id/albumEntryRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	
		<ImageView
			android:id="@+id/albumCover"
			android:layout_width="40dp"
			android:layout_height="35dp"
			android:layout_margin="3dp"
			android:scaleType="fitXY"
			android:layout_gravity="center_vertical"
			android:src="@drawable/nocover" >
		</ImageView>
	
		<LinearLayout
	        android:id="@+id/albumArtistTitleWrapper"
	        android:layout_gravity="center"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
	        android:orientation="vertical">
	        <TextView
				android:id="@+id/albumTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="album title"
				android:textStyle="bold"
				android:textSize="14sp" >
			</TextView>
	       	<TextView
				android:id="@+id/albumArtist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="album artist"
				android:textStyle="bold|italic"
				android:textSize="12sp" >
			</TextView>
		</LinearLayout>
	</FrameLayout>
	<FrameLayout
        android:id="@+id/trackEntryRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<LinearLayout
	        android:id="@+id/trackArtistTitleWrapper"
	        android:layout_gravity="left"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
			android:paddingBottom="10px"
			android:paddingTop="10px"
	        android:orientation="horizontal">
	        <TextView
				android:id="@+id/trackNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="01"
				android:textStyle="bold"
				android:textSize="14sp" >
			</TextView>
			<TextView
				android:id="@+id/separator1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=" - "
				android:textStyle="bold"
				android:textSize="14sp" >
			</TextView>
	        <TextView
				android:id="@+id/trackTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="2dp"
				android:text="album title 2343242343"
				android:textStyle="bold"
				android:textSize="14sp" >
			</TextView>
			<TextView
				android:id="@+id/separator2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="2dp"
				android:text=" - "
				android:textStyle="bold"
				android:textSize="14sp" >
			</TextView>
	       	<TextView
				android:id="@+id/trackArtist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="album artist 123 45678 768 786"
				android:textStyle="bold|italic"
				android:textSize="12sp" >
			</TextView>
		</LinearLayout>
	
		<TextView
			android:id="@+id/trackEntryLength"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_gravity="right"
			android:text="00:00"
			android:textStyle="bold"
			android:textSize="14sp" >
		</TextView>

	</FrameLayout>
</LinearLayout>
